(* Toggle Operator Run Command when PB pressed *)
R_TRIG_RSC3B1_OP_PB (_IO_EM_DI_10);
IF R_TRIG_RSC3B1_OP_PB.Q = TRUE THEN
	IF RSC3B1_OP_RUN_CMD = TRUE THEN
		RSC3B1_OP_RUN_CMD := FALSE;
		OP_RUN_FLIPPED := TRUE;
	ELSIF RSC3B1_OP_RUN_CMD = FALSE
		AND OP_RUN_FLIPPED = FALSE THEN
		RSC3B1_OP_RUN_CMD := TRUE;
	END_IF;
	OP_RUN_FLIPPED := FALSE;
END_IF;

